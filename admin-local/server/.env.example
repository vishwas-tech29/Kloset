# Database (same as production)
DATABASE_URL="file:../../prisma/dev.db"

# Admin Credentials (NEVER COMMIT REAL VALUES)
ADMIN_USERNAME=owner
ADMIN_PASSWORD_HASH=   # Generate with: npm run hash-password yourpassword

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your_super_secret_jwt_key_here_256_bits_minimum

# Session
SESSION_EXPIRES=8h

# Printer Configuration
PRINTER_NAME=YourPrinterNameHere
PRINTER_TYPE=EPSON
PAPER_SIZE=80

# Server
PORT=4000
NODE_ENV=development

# Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
